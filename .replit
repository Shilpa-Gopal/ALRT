modules = ["nodejs-20", "python-3.11"]
[nix]
channel = "stable-24_05"

[workflows]
runButton = "Dev"

[[workflows.workflow]]
name = "Dev"
author = 11421348
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "gunicorn -w 4 -b 0.0.0.0:5000 main:app"]

[[ports]]
localPort = 5174
externalPort = 80
