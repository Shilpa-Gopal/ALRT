modules = ["nodejs-20", "python-3.11"]
[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 11421348
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Frontend Dev"
author = 11421348
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "gunicorn -w 4 -b 0.0.0.0:5000 main:app"]
